<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomFragment">


    <TextView
        android:id="@+id/text_kirish"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tizimga kirish"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/tel_number"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <EditText
            android:id="@+id/telraqam_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Telefon raqm"
            android:layout_marginStart="10dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_margin="30dp"
        android:id="@+id/passvord"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/tel_number"
        app:layout_constraintBottom_toTopOf="@id/btn_registr"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp">

        <EditText
            android:id="@+id/passvord_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Parol"
            android:layout_marginStart="10dp"/>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/btn_registr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ro’yxatdan o’tish"
        app:layout_constraintTop_toBottomOf="@+id/passvord"
        app:layout_constraintBottom_toTopOf="@id/btn_log"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#166BFA"/>

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#166BFA"
        android:id="@+id/btn_log"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toBottomOf="@+id/btn_registr"
        app:layout_constraintBottom_toTopOf="@+id/version"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/btn_log2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tizimga kirish"
            android:gravity="center"
            android:textColor="@color/white"/>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn_log"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>