<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/view_btn"
        android:layout_width="match_parent"
        android:layout_height="127dp">

        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <com.google.android.material.imageview.ShapeableImageView
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/darker_gray"
                android:src="@drawable/pluss"
                android:padding="5dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                android:id="@+id/item_image"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:layout_gravity="center">

            <TextView
                android:textStyle="bold"
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fazliddin Toshpulatov"

                android:textSize="20dp"/>

            <TextView
                android:id="@+id/item_davlat_manzil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+998 97 007 96 20"
                />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:dividerInsetStart="30dp"
        app:dividerInsetEnd="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_marginEnd="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phone_call_icon"
            android:id="@+id/btn_call"/>


        <ImageView
            android:layout_marginStart="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/sms_foreground"
            android:id="@+id/btn_sms"/>
    </LinearLayout>





</LinearLayout>